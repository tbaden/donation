<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <record model="ir.ui.view" id="membership_products_tree">
        <field name="name">Membership tax receipt</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="membership.membership_products_tree" />
        <field name="arch" type="xml">
            <field name="list_price" position="after">
                <field name="tax_receipt_ok" />
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="membership_products_form">
        <field name="name">Add membership tax receipt eligibility field</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="membership.membership_products_form" />
        <field name="arch" type="xml">
            <field name="default_code" position="before">
                <field name="tax_receipt_ok" />
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="membership_product_search_form_view">
        <field name="name">Add tax receipt eligibility field</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="membership.membership_product_search_form_view" />
        <field name="arch" type="xml">
            <field name="categ_id" position="after">
                <field name="tax_receipt_ok" />
            </field>
            <xpath expr="//search//group//filter[1]" position="after">
                <filter name="membership_tax_receipt_ok"
                        string="Tax Receipt ok" domain="[]"/>
            </xpath>
        </field>
    </record>

</odoo>